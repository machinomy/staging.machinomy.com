server {
  listen  *:80;
  listen [::]:80;

  server_name {{ hub_name }} www.{{ hub_name }};
  location / {
    try_files maintain.html $uri $uri/index.html @ssl;
  }

  location @ssl {
    return 301 https://$server_name$request_uri;
  }
}

upstream hub {
    server localhost:3001;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  listen 9090 ssl http2;
  listen [::]:9090 ssl http2;

  server_name {{hub_name}} www.{{hub_name}};
  root        {{staging_path}}/public;
  index index.html;
  access_log  /var/log/nginx/{{ hub_name }}.log;
  client_max_body_size 10000k;

  gzip on;
  gzip_vary on;
  gzip_min_length 10240;
  gzip_proxied expired no-cache no-store private auth;
  gzip_types text/plain text/css text/xml text/javascript application/javascript application/x-javascript image/svg+xml application/xml;
  gzip_disable "MSIE [1-6]\.";

  location / {
    try_files maintain.html $uri $uri/index.html @node;
  }

  location @hub {
    proxy_pass http://hub;
    proxy_http_version 1.1;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $http_host;
    proxy_set_header X-NginX-Proxy true;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_max_temp_file_size 0;
    proxy_redirect off;
    proxy_read_timeout 120s;
    proxy_cache_bypass $http_upgrade;
  }

  ssl_certificate /etc/letsencrypt/live/{{hub_name}}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{hub_name}}/privkey.pem;

  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
  ssl_ecdh_curve secp384r1;
  ssl_session_cache shared:SSL:10m;
  ssl_session_tickets off;
  ssl_stapling on;
  ssl_stapling_verify on;
  resolver 8.8.8.8 8.8.4.4 valid=300s;
  resolver_timeout 5s;
  add_header Strict-Transport-Security "max-age=63072000; includeSubdomains";
  add_header X-Content-Type-Options nosniff;

  ssl_dhparam /etc/ssl/certs/dhparam.pem;
}
